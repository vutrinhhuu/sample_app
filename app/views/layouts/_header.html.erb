<header class="navbar navbar-fixed-top navbar-dark bg-dark">
  <div class="container">
    <%= link_to t("app_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item">
          <%= link_to t("home"), root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t("help"), help_path, class: "nav-link" %>
        </li>
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to t("user"), users_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
              <%= t("account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="dropdown-item">
                <%= link_to t("profile"), current_user %>
              </li>
              <li class="dropdown-item">
                <%= link_to t("setting"), edit_user_path(current_user) %>
              </li>
              <li class="dropdown-item">
                <%= link_to t("logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to t("login"), login_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
